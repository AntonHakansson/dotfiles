[colors]
black = ${xrdb:color0:#1d2021}
darkred = ${xrdb:color1:#cc241d}
darkgreen = ${xrdb:color2:#98971a}
darkyellow = ${xrdb:color3:#d79921}
darkblue = ${xrdb:color4:#458588}
darkmagenta = ${xrdb:color5:#b16286}
darkcyan = ${xrdb:color6:#689d6a}
lightgray = ${xrdb:color7:#a89984}
gray = ${xrdb:color8:#928374}
red = ${xrdb:color9:#fb4934}
green = ${xrdb:color10:#b8bb26}
yellow = ${xrdb:color11:#fabd2f}
blue = ${xrdb:color12:#83a598}
magenta = ${xrdb:color13:#d3869b}
cyan = ${xrdb:color14:#8ec07c}
white = ${xrdb:color15:#ebdbb2}
background = ${xrdb:color256:#1d2021}
foreground = ${xrdb:color257:#ebdbb2}

[bar/default]
monitor = ${env:MONITOR:DVI-I-1}
enable-ipc = true
height = 24
width = 100%:-30
offset-x = 15
fixed-center = false
override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = {$xrdb:red}

border-size = 0
border-color = ${colors.white}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = mono:pixelsize=9;0
font-1 = FontAwesome5Free:style=Solid:size=9;0
; fonts for 'centered' text/icons
font-2 = mono:pixelsize=12;3
font-3 = FontAwesome5Free:style=Solid:size=12;3


; Other modules: xkeyboard filesystem xbacklight backlight-acpi cpu memory temperature powermenu weather
modules-left = bspwm xwindow
modules-right = pia memory filesystem volume date

tray-position = none
tray-padding = 0

wm-restack = bspwm

;override-redirect = true

scroll-down = bspwm-desknext
scroll-up = bspwm-deskprev

[module/mutt-wizard]
type = custom/script
exec = mailbox
interval = 5
format-prefix = "Ôê∞ "
format-underline = ${colors.red}

click-left = $TERMINAL -e neomutt


[module/weather]
type = custom/script
exec = weather
interval = 5000
;format-underline =

[module/xwindow]
type = internal/xwindow
label = "  %title:0:45:...%"
format-foreground = ${colors.darkblue}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.gray}
format-prefix-underline = ${colors.darkmagenta}

label-layout = %layout%
label-layout-underline = ${colors.darkmagenta}

label-indicator-padding = 1
label-indicator-margin = 1
label-indicator-background = ${colors.darkmagenta}
label-indicator-underline = ${colors.darkmagenta}

[module/filesystem]
type = internal/fs
interval = 30

mount-0 = /

label-mounted = %{O-4}%percentage_used%%
format-mounted-prefix = "/: "
format-mounted-prefix-foreground = ${colors.gray}
format-mounted-underline = ${colors.cyan}
format-mounted-padding = 1

label-unmounted = <not mounted>
label-unmounted-foreground = ${colors.gray}
label-unmounted-padding = 1

[module/bspwm]
type = internal/bspwm

; ws-icon-0 = 1;Ôãê
; ws-icon-1 = 2;ÔÑ°
; ws-icon-2 = 3;ÔÑ†
ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;ÔÄπ

label-focused = %icon%
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.darkblue}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-foreground = ${colors.lightgray}
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.lightgray}
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.lightgray}
label-empty-padding = 1

[module/mpd]
type = internal/mpd
format-online = <label-song>  <label-time>

click-left = $TERMINAL -e ncmpcpp
click-right = mpc toggle

label-song =  %artist% - %title%
label-song-maxlen = 70
label-song-ellipsis = true

format-paused-foreground = ${colors.gray}

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format-prefix = "üå° "
format-prefix-foreground = ${colors.gray}
format-underline = ${colors.red}

[module/pia]
type = custom/script
interval = 5
exec = piactl get connectionstate

format-prefix="VPN: "
format-padding = 1
format-prefix-foreground = ${colors.gray}
format-underline = ${colors.lightgray}

click-left = /opt/piavpn/bin/pia-client &

[module/memory]
type = internal/memory
interval = 5
label = %{O-4}%percentage_used%%
format-prefix = "MEM: "
format-padding = 1
format-prefix-foreground = ${colors.gray}
format-underline = ${colors.darkcyan}

click-left = $TERMINAL -e htop

[module/date]
type = custom/script
interval = 60
exec = date +"%Y %b %d (%a) %H:%M"

format-prefix="ÔÑ≥ "
format-padding = 1
format-prefix-foreground = ${colors.gray}
format-underline = ${colors.blue}

click-left = (date --iso-8601 | xclip -selection clipboard) && notify-send "Ôå®  Copied (iso)"
click-right = (date +"%m/%d/%Y/ %H:%M" | xclip -selection clipboard) && notify-send "Ôå®  Copied (Project Journal)"

[module/volume]
type = internal/pulseaudio
; format-volume = <ramp-volume>%{O-2} %<label-volume>:3:10:max%
format-volume = <ramp-volume>%{O-2} <label-volume>

; label-volume-minlen = 3 // TODO: this would be neet
label-muted   = ÔÄ¶ 0%

ramp-volume-0 = ÔÄ¶
ramp-volume-0-foreground = ${colors.gray}
ramp-volume-1 = ÔÄß
ramp-volume-1-foreground = ${colors.gray}
ramp-volume-2 = ÔÄ®
ramp-volume-2-foreground = ${colors.gray}

format-volume-padding = 1
format-volume-underline = ${colors.darkblue}

format-muted-underline = ${colors.darkblue}
format-muted-padding = 1
format-muted-foreground = ${colors.gray}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.red}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.darkmagenta}

ramp-0 = Ôãã
ramp-1 = Ôãä
ramp-2 = Ôãâ
ramp-3 = Ôãà
ramp-4 = Ôãá
ramp-foreground = ${colors.gray}

[module/powermenu]
type = custom/menu

format = <label-toggle> %{T3}<menu>%{T-}

format-spacing = 1
format-prefix = "  "
label-open = %{T4}ÔÑë%{T-}
label-open-foreground = ${colors.darkmagenta}
label-close = %{T4}Ôêê%{T-}
label-close-foreground = ${colors.darkmagenta}
label-separator = %{T3}|%{T-}
label-separator-foreground = ${colors.gray}

menu-0-0 = %{T3}reboot%{T-}
menu-0-0-exec = menu-open-1
menu-0-1 = %{T3}power off%{T-}
menu-0-1-exec = menu-open-2

menu-1-0 = %{T3}cancel%{T-}
menu-1-0-exec = menu-open-0
menu-1-1 = %{T3}reboot%{T-}
menu-1-1-exec = sudo reboot

menu-2-0 = %{T3}power off%{T-}
menu-2-0-exec = sudo poweroff
menu-2-1 = %{T3}cancel%{T-}
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true

[global/wm]

